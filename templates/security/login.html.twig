{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal">Connexion</h1>
        <div class="form-group">
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" placeholder="Votre email" class="form-control" required autofocus>
        </div>
        <div class="form-group">
            <input type="password" name="password" id="inputPassword" placeholder="Votre password" class="form-control" required>
        </div>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >
        <button class="btn btn-lg btn-success" type="submit">
            Connexion
        </button>
    </form>
{% endblock %}
